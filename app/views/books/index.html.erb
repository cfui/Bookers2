
<%= flash[:danger] %>
<h2>User info</h2>

    <div class="form-group has-icon">
        <div class="user-edit-image">
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
        </div>
    </div>


    <% if user_signed_in? %>

    	<p>name : <%= @user.name %></p>

    	<p>introduction : <%= @user.introduction %></p>

        <%= link_to "編集", edit_user_path(@user.id) %> 

    <% end %>



    <h1>New book</h1>
    <!-- form_for部分 -->
    <%= form_for(@book) do |f| %>
     
        <h4>Title</h4>
        <%= f.text_field :title %>
     
        <h4>Opinion</h4>
        <%= f.text_area :body %>
     
        <%= f.submit 'Create Book' %>
     
    <% end %>


   <h1>Books</h1>
    
    <% @books.each do |book| %>
        <div class="form-group has-icon">
            <div class="user-edit-image">
          
        <%= link_to user_path(@user.id) do %>
            <%=  attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>

            <% end %>

            </div>
        </div>
    <table class="table table-hover">
    <thead>
        <tr>
               <th>Title</th>
            <th>Opinion</th>
        </tr>
      </tbody>
      <tbody>
        <tr>
            <td><span>
            <%= link_to book_path(book.id) do %>
                <%= book.title %>
            <% end %>
                
            </span></td>
            <td><span><%= book.body %></span></td>
        </tr>
      </tbody>
    </table>
 
          <% end %>

