
<h2>User info</h2>

    <div class="form-group has-icon">
        <div class="user-edit-image">
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
        </div>
    </div>


    <% if user_signed_in? %>

    	<p>name : <%= @user.name %></p>

    	<p>introduction : <%= @user.introduction %></p>

    <% end %>

    <span class="glyphicon glyphicon-wrench" aria-hidden="true"><%= link_to "編集", edit_user_path(@user.id) %> </span>



    <h1>New book</h1>
    <!-- form_for部分 -->
    <%= form_for(@book) do |f| %>
     
        <h4>Title</h4>
        <%= f.text_field :title %>
     
        <h4>Opinion</h4>
        <%= f.text_area :body %>
     
        <%= f.submit 'Create Book' %>
     
    <% end %>


    <%= render 'books/list', books: @books %>